{
  "name": "algoliasearch-monorepo",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "@wdio/cli": "^5.11.13",
    "@wdio/jasmine-framework": "^5.11.0",
    "@wdio/local-runner": "^5.11.13",
    "@wdio/sauce-service": "^5.11.1",
    "@wdio/selenium-standalone-service": "^5.11.2",
    "@wdio/spec-reporter": "^5.11.7",
    "@wdio/static-server-service": "^5.11.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-lodash": "^3.3.4",
    "bundlesize": "^0.18.0",
    "dotenv-extended": "^2.4.0",
    "eslint": "^6.2.2",
    "eslint-config-algolia": "^14.0.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-functional": "^1.0.0-rc.2",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.15.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.4.0",
    "eslint-plugin-wdio": "^5.12.1",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "jest-mock-console": "^1.0.0",
    "lerna": "^3.15.0",
    "lint-staged": "^9.2.4",
    "nock": "^11.3.4",
    "prettier": "^1.18.2",
    "rollup": "^1.20.3",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-filesize": "6.0.1",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.24.0",
    "rollup-plugin-uglify": "^6.0.3",
    "serve": "^11.2.0",
    "ts-jest": "^24.0.2",
    "ts-mockito": "^2.3.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2",
    "webdriverio": "^5.12.5",
    "xhr-mock": "^2.4.1"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build": "lerna run build",
    "lint": "eslint . --ext .js,.ts --fix",
    "precommit": "lint-staged",
    "test:browser-locally": "yarn build && ./scripts/prepare-test-browser.sh && wdio ./wdio.local.conf.js",
    "test:browser-ci": "yarn build && ./scripts/prepare-test-browser.sh && wdio ./wdio.saucelabs.conf.js",
    "test:lint": "eslint . --ext .js,.ts",
    "test:locally": "lerna clean --yes && yarn lint && yarn test:types && yarn test:unit",
    "test:size": "bundlesize",
    "test:build": "yarn build && yarn test:size",
    "test:types": "yarn tsc",
    "test:unit": "lerna clean --yes && jest --verbose --updateSnapshot",
    "playground": "yarn build && ./scripts/prepare-playground.sh && yarn serve",
    "update": "rm -rf node_modules && rm -f yarn.lock && yarn && lerna clean --yes",
    "release:clean": "lerna run release:clean",
    "release:alpha": "cd packages/algoliasearch && yarn release:alpha && cd ../../",
    "release:stable": "cd packages/algoliasearch && lerna run release:stable && cd ../../"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "bundlesize": [
    {
      "path": "packages/algoliasearch/dist/algoliasearch.umd.min.js",
      "maxSize": "5.96KB"
    },
    {
      "path": "packages/algoliasearch/dist/algoliasearch-lite.umd.min.js",
      "maxSize": "3.21KB"
    }
  ],
  "workspaces": [
    "packages/*"
  ]
}
