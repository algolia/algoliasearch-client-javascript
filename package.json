{
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node --max-old-space-size=4096 scripts/build.js",
    "generate:exports": "node scripts/generate-exports",
    "lint": "eslint . --ext .js,.ts --fix && node ./scripts/sort-package-json.js",
    "playground": "./scripts/prepare-playground.sh && yarn serve",
    "pre-commit": "yarn test:lint && yarn test:types",
    "release": "./scripts/release.sh",
    "release-publish": "lerna exec --concurrency 1 -- npm publish --verbose --tag beta",
    "test:browser-ci": "./scripts/prepare-test-browser.sh && wdio ./wdio.saucelabs.conf.js",
    "test:browser-locally": "./scripts/prepare-test-browser.sh && wdio ./wdio.local.conf.js",
    "test:lint": "eslint . --ext .js,.ts",
    "test:locally": "lerna clean --yes && yarn lint && yarn test:types && yarn test:unit",
    "test:size": "bundlesize",
    "test:types": "yarn tsc",
    "test:unit": "./scripts/prepare-test-unit.sh && lerna clean --yes && jest --verbose --updateSnapshot",
    "update": "rm -rf node_modules && rm -f yarn.lock && lerna clean --yes && yarn install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit"
    }
  },
  "devDependencies": {
    "@babel/cli": "7.8.3",
    "@babel/core": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/preset-typescript": "7.8.3",
    "@microsoft/api-extractor": "7.7.5",
    "@rollup/plugin-alias": "3.0.0",
    "@rollup/plugin-json": "4.0.1",
    "@rollup/plugin-node-resolve": "7.0.0",
    "@types/jest": "24.9.0",
    "@types/node": "13.1.8",
    "@typescript-eslint/eslint-plugin": "2.17.0",
    "@typescript-eslint/parser": "2.17.0",
    "@wdio/cli": "5.18.6",
    "@wdio/jasmine-framework": "5.18.6",
    "@wdio/local-runner": "5.18.6",
    "@wdio/sauce-service": "5.16.10",
    "@wdio/selenium-standalone-service": "5.16.10",
    "@wdio/spec-reporter": "5.18.6",
    "@wdio/static-server-service": "5.16.10",
    "barrelsby": "2.2.0",
    "bundlesize": "0.18.0",
    "dotenv": "8.2.0",
    "dotenv-extended": "2.7.1",
    "eslint": "6.8.0",
    "eslint-config-algolia": "15.0.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-eslint-comments": "3.1.2",
    "eslint-plugin-functional": "2.0.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jest": "23.6.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-simple-import-sort": "5.0.0",
    "eslint-plugin-sonarjs": "0.5.0",
    "eslint-plugin-wdio": "5.13.2",
    "fs-extra": "8.1.0",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "jest-mock-console": "1.0.0",
    "lerna": "3.20.2",
    "nock": "11.7.2",
    "prettier": "1.19.1",
    "rollup": "1.29.1",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-filesize": "6.1.1",
    "rollup-plugin-ignore": "1.0.5",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-terser": "5.2.0",
    "rollup-plugin-typescript2": "0.25.3",
    "serve": "11.3.0",
    "sort-package-json": "1.39.0",
    "ts-jest": "24.3.0",
    "ts-mockito": "2.5.0",
    "ts-node": "8.6.2",
    "typescript": "3.7.5",
    "webdriverio": "5.18.6",
    "xhr-mock": "2.5.1"
  },
  "engines": {
    "node": ">= 8.0.0",
    "yarn": ">= 1.6.0"
  },
  "bundlesize": [
    {
      "path": "packages/algoliasearch/dist/algoliasearch.umd.js",
      "maxSize": "7.45KB"
    },
    {
      "path": "packages/algoliasearch/dist/algoliasearch-lite.umd.js",
      "maxSize": "4.29KB"
    }
  ]
}
