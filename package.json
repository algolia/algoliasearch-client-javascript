{
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node --max-old-space-size=4096 scripts/build.js",
    "generate-exports": "node scripts/generate-exports",
    "lint": "eslint . --ext .js,.ts --fix && node ./scripts/sort-package-json.js",
    "playground": "./scripts/prepare-playground.sh && yarn serve",
    "pre-commit": "yarn test:lint && yarn test:types",
    "release": "./scripts/release.sh",
    "release-publish": "lerna exec --concurrency 1 -- npm publish --verbose --tag beta",
    "test:browser-ci": "./scripts/prepare-test-browser.sh && wdio ./wdio.saucelabs.conf.js",
    "test:browser-locally": "./scripts/prepare-test-browser.sh && wdio ./wdio.local.conf.js",
    "test:lint": "eslint . --ext .js,.ts",
    "test:locally": "lerna clean --yes && yarn lint && yarn test:types && yarn test:unit",
    "test:size": "bundlesize",
    "test:types": "yarn tsc",
    "test:unit": "./scripts/prepare-test-unit.sh && lerna clean --yes && jest --verbose --updateSnapshot",
    "update": "rm -rf node_modules && rm -f yarn.lock && lerna clean --yes && yarn install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.6.0",
    "@microsoft/api-extractor": "^7.5.2",
    "@rollup/plugin-alias": "^3.0.0",
    "@rollup/plugin-json": "^4.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^13.1.2",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "@wdio/cli": "^5.11.13",
    "@wdio/jasmine-framework": "^5.11.0",
    "@wdio/local-runner": "^5.11.13",
    "@wdio/sauce-service": "^5.11.1",
    "@wdio/selenium-standalone-service": "^5.11.2",
    "@wdio/spec-reporter": "^5.11.7",
    "@wdio/static-server-service": "^5.11.0",
    "barrelsby": "^2.2.0",
    "bundlesize": "^0.18.0",
    "dotenv": "^8.2.0",
    "dotenv-extended": "^2.4.0",
    "eslint": "^6.2.2",
    "eslint-config-algolia": "^15.0.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-functional": "^2.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^5.0.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-wdio": "^5.12.1",
    "fs-extra": "^8.1.0",
    "husky": "^4.0.0",
    "jest": "^24.9.0",
    "jest-mock-console": "^1.0.0",
    "lerna": "^3.15.0",
    "nock": "^11.3.4",
    "prettier": "^1.18.2",
    "rollup": "^1.20.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-filesize": "6.2.1",
    "rollup-plugin-ignore": "^1.0.5",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript2": "^0.25.2",
    "serve": "^11.2.0",
    "sort-package-json": "^1.23.1",
    "ts-jest": "^24.0.2",
    "ts-mockito": "^2.3.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2",
    "webdriverio": "^5.12.5",
    "xhr-mock": "^2.4.1"
  },
  "engines": {
    "node": ">= 8.0.0",
    "yarn": ">= 1.6.0"
  },
  "bundlesize": [
    {
      "path": "packages/algoliasearch/dist/algoliasearch.umd.js",
      "maxSize": "7.14KB"
    },
    {
      "path": "packages/algoliasearch/dist/algoliasearch-lite.umd.js",
      "maxSize": "4.12KB"
    }
  ]
}
