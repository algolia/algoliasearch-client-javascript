{
  "compilerOptions": {
    "noEmit": true,
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "target": "ESNEXT",
    "lib": ["es2015", "dom"],
    "types": ["node", "webdriverio", "jest"],
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "inlineSources": true,
    "rootDir": "../."
  },
  "preserveSymlinks": true,
  "include": ["../packages/**/src/**/*.ts"],
  "exclude": ["../packages/**/src/__tests__/**/*.ts", "**/node_modules/**"]
}
