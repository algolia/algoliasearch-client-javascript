#!/usr/bin/env bash

set -e # exit when error

echo "Browser test"

echo "Browser test: build"
NODE_ENV=production npm run build

echo "Browser test: integration"
DEBUG=zuul* zuul --loopback localhostfix.nossl --sauce-connect --no-coverage -- test/run-integration.js

echo "Browser test: unit"
DEBUG=zuul* zuul --loopback localhostfix.nossl --sauce-connect --no-coverage -- test/run-browser.js
